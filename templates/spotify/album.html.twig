{% extends 'base.html.twig' %}

{% block title %}{{ album.name }} - D√©tails de l'Album{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Arial', sans-serif;
    }
    .album-details-container {
        max-width: 900px;
        margin: auto;
        padding: 30px;
        text-align: center;
    }
    .album-info {
        display: flex;
        align-items: center;
        gap: 30px;
        background: #181818;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(255, 255, 255, 0.1);
    }
    .album-cover {
        width: 250px;
        border-radius: 15px;
        transition: transform 0.3s ease;
    }
    .album-cover:hover {
        transform: scale(1.05);
    }
    .album-meta {
        text-align: left;
    }
    .album-meta h1 {
        font-size: 2rem;
        margin-bottom: 10px;
    }
    .album-meta p {
        font-size: 1rem;
        color: #b3b3b3;
        margin-bottom: 5px;
    }
    .btn-spotify {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        background: #1DB954;
        color: #fff;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s ease;
    }
    .btn-spotify:hover {
        background: #18a848;
    }
    .tracklist {
        margin-top: 30px;
        text-align: left;
        background: #181818;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(255, 255, 255, 0.1);
    }
    .tracklist h2 {
        margin-bottom: 15px;
        color: #1DB954;
    }
    .tracklist ol {
        padding-left: 20px;
    }
    .tracklist li {
        margin-bottom: 8px;
    }
    .other-albums {
        margin-top: 40px;
        text-align: center;
    }
    .other-albums h2 {
        color: #1DB954;
        margin-bottom: 15px;
    }
    .album-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
    }
    .album-card {
        background: #282828;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .album-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 5px 10px rgba(255, 255, 255, 0.2);
    }
    .album-card img {
        width: 120px;
        height: 120px;
        border-radius: 10px;
    }
    .album-card p {
        font-size: 1rem;
        margin-top: 10px;
        color: #fff;
    }
    .btn-back {
        display: inline-block;
        margin-top: 30px;
        padding: 12px 25px;
        background: #555;
        color: white;
        border-radius: 25px;
        text-decoration: none;
        font-size: 1rem;
        transition: background 0.3s ease;
    }
    .btn-back:hover {
        background: #777;
    }

    .product-container {
        display: flex;
        gap: 20px;
        margin-top: 30px;
        justify-content: center;
    }

    .product-panel {
        background: #181818;
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(255, 255, 255, 0.1);
        width: 45%;
    }

    .product-image {
        width: 120px;
        border-radius: 10px;
    }

    .product-info {
        flex: 1;
        text-align: left;
    }

    .product-info h2 {
        color: #1DB954;
        margin-bottom: 10px;
    }

    .quantity {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 10px 0;
    }

    .quantity-btn {
        background: #1DB954;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
    }

    .quantity-btn:hover {
        background: #18a848;
    }

    .add-to-cart {
        display: block;
        margin-top: 10px;
        padding: 8px 15px;
        background: #1DB954;
        color: white;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
        border: none;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .add-to-cart:hover {
        background: #18a848;
    }
    .home-container a {
        position: relative;
        text-decoration: none;
        color: #1DB954;
        font-weight: bold;
        font-size: 1rem;
        display: inline-block;
        margin-bottom: 20px;
    }

    .home-container a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        width: 100%;
        height: 2px;
        background-color: #1DB954;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
    }

    .home-container a:hover::after {
        transform: scaleX(1);
    }

</style>
{% endblock %}

{% block body %}
<div class="album-details-container">
    <!-- Album Info -->
    <div class="home-container">
            <a href="/home">üè† Accueil</a>
    </div>
    <div class="album-info">
        <img src="{{ album.images[0].url }}" alt="{{ album.name }}" class="album-cover">
        <div class="album-meta">
            <h1>{{ album.name }}</h1>
            <p><strong>üé§ Artiste :</strong> {{ album.artists[0].name }}</p>
            <p><strong>üìÖ Sortie :</strong> {{ album.release_date }}</p>
            <p><strong>üéµ Nombre de pistes :</strong> {{ album.total_tracks }}</p>
            <a href="{{ album.external_urls.spotify }}" target="_blank" class="btn-spotify">üéß √âcouter sur Spotify</a>
        </div>
    </div>

    <div class="product-container">
        <!-- Vinyle -->
        <div class="product-panel">
            <img src="{{ album.images[0].url }}" alt="Vinyle - {{ album.name }}" class="product-image">
            <div class="product-info">
                <h2>üéµ Vinyle</h2>
                <p>√âdition sp√©ciale vinyle de l'album.</p>
                <div class="quantity">
                    <button class="quantity-btn" onclick="updateQuantity('vinyl', -1)">-</button>
                    <span id="vinyl-quantity">1</span>
                    <button class="quantity-btn" onclick="updateQuantity('vinyl', 1)">+</button>
                </div>
                <button class="add-to-cart">üõí Ajouter au panier</button>
            </div>
        </div>

        <!-- CD -->
        <div class="product-panel">
            <img src="{{ album.images[0].url }}" alt="CD - {{ album.name }}" class="product-image">
            <div class="product-info">
                <h2>üíø CD</h2>
                <p>Version CD de l'album.</p>
                <div class="quantity">
                    <button class="quantity-btn" onclick="updateQuantity('cd', -1)">-</button>
                    <span id="cd-quantity">1</span>
                    <button class="quantity-btn" onclick="updateQuantity('cd', 1)">+</button>
                </div>
                <button class="add-to-cart">üõí Ajouter au panier</button>
            </div>
        </div>
    </div>

    <!-- Liste des morceaux -->
    <div class="tracklist">
        <h2>üéº Liste des morceaux</h2>
        <ol>
            {% for track in album.tracks.items %}
                <li>{{ track.track_number }}. {{ track.name }} - {{ (track.duration_ms / 60000)|round(2) }} min</li>
            {% endfor %}
        </ol>
    </div>

    <!-- Autres albums de l'artiste -->
    <div class="other-albums">
        <h2>üìÄ Autres albums de {{ album.artists[0].name }}</h2>
        <div class="album-list">
            {% for other_album in artistAlbums %}
                <div class="album-card">
                    <a href="{{ path('spotify_album_details', {id: other_album.id}) }}">
                        <img src="{{ other_album.images[0].url }}" alt="{{ other_album.name }}">
                        <p>{{ other_album.name }}</p>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Bouton retour -->
    <a href="{{ path('spotify_home') }}" class="btn-back">‚¨Ö Retour √† l'accueil</a>
</div>
<script>
function updateQuantity(type, change) {
    let quantityElement = document.getElementById(type + "-quantity");
    let quantity = parseInt(quantityElement.innerText);
    
    quantity = Math.max(1, quantity + change); // Ne pas descendre en dessous de 1
    quantityElement.innerText = quantity;
}
</script>

{% endblock %}
