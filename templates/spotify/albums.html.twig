{% extends 'base.html.twig' %}

{% block title %}Mes Albums Spotify{% endblock %}

{% block body %}
    <h1>Mes Albums Spotify</h1>
    <div class="album-container">
        {% for item in albums %}
            <div class="album">
                <img src="{{ item.album.images[0].url }}" alt="{{ item.album.name }}" width="150">
                <h3>{{ item.album.name }}</h3>
                <p>Artiste : {{ item.album.artists[0].name }}</p>
                <a href="{{ item.album.external_urls.spotify }}" target="_blank">Ã‰couter sur Spotify</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
