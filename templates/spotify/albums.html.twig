{% extends 'base.html.twig' %}

{% block title %}üéµ Mes Albums Spotify{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: Arial, sans-serif;
    }
    .container {
        max-width: 1100px;
        margin: auto;
        padding: 20px;
    }
    h1 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        color: #1DB954;
    }
    .album-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }
    .album {
        background: #282828;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        transition: transform 0.3s ease;
    }
    .album:hover {
        transform: translateY(-5px);
    }
    .album img {
        width: 100%;
        border-radius: 10px;
        margin-bottom: 10px;
    }
    .album h3 {
        font-size: 1.1rem;
        margin: 5px 0;
    }
    .album p {
        font-size: 0.9rem;
        color: #b3b3b3;
    }
    .btn-spotify {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        background: #1DB954;
        color: #fff;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s ease;
    }
    .btn-spotify:hover {
        background: #18a848;
    }
    .home-link {
        display: inline-block;
        margin-bottom: 20px;
        color: #1DB954;
        font-weight: bold;
        font-size: 1rem;
        text-decoration: none;
        border-bottom: 2px solid transparent;
        transition: border-color 0.3s ease-in-out;
    }
    .home-link:hover {
        border-color: #1DB954;
    }

    .album-link {
    text-decoration: none; /* Emp√™che le soulignement par d√©faut */
    color: inherit; /* Conserve la couleur du texte sans modification */
}

.album-link:hover {
    color: inherit; /* Garde la couleur du texte inchang√©e au survol */
    cursor: pointer; /* Change le curseur pour un effet de clic */
}
</style>
{% endblock %}

{% block body %}
    <div class="container">
        <a href="/home" class="home-link">üè† Accueil</a>
        <h1>üé∂ Mes Albums Spotify</h1>
        <div class="album-container">
            {% for item in albums %}
                <div class="album">
                    <a href="/album/{{ item.album.id }}" class="album-link">
                        <img src="{{ item.album.images[0].url }}" alt="{{ item.album.name }}">
                        <h3>{{ item.album.name }}</h3>
                    </a>
                    <p>üé§ {{ item.album.artists[0].name }}</p>
                    <a href="{{ item.album.external_urls.spotify }}" target="_blank" class="btn-spotify">üéß √âcouter</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
