{% extends 'base.html.twig' %}

{% block title %}üè† Accueil | Spotify{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: Arial, sans-serif;
    }
    .container {
        max-width: 1100px;
        margin: auto;
        padding: 20px;
    }
    h1 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 2rem;
        color: #1DB954;
    }
    .banner {
        background: linear-gradient(45deg, #333, #1DB954);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        margin-bottom: 20px;
        position: relative;
    }
    .banner p {
        font-size: 1.2rem;
    }

    /* üîπ Style des boutons Profil & Panier */
    .banner-buttons {
        margin-top: 15px;
        display: flex;
        justify-content: center;
        gap: 15px;
    }
    .btn-banner {
        display: inline-block;
        padding: 10px 20px;
        background: #1DB954;
        color: white;
        font-weight: bold;
        border-radius: 20px;
        text-decoration: none;
        transition: background 0.3s ease;
    }
    .btn-banner:hover {
        background: #18a848;
    }

    .search-bar {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: none;
        border-radius: 5px;
        background: #282828;
        color: #fff;
        font-size: 1rem;
    }
    .search-bar::placeholder {
        color: #b3b3b3;
    }
    .search-results {
        list-style: none;
        padding: 0;
        margin-top: 10px;
    }
    .search-results li {
        display: flex;
        align-items: center;
        padding: 10px;
        background: #1c1c1c;
        border-radius: 5px;
        margin-bottom: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
    }
    .search-results li:hover {
        background: #1DB954;
    }
    .search-results img {
        border-radius: 5px;
        margin-right: 10px;
    }
    .album-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }
    .album {
        background: #282828;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        transition: transform 0.3s ease;
    }
    .album:hover {
        transform: translateY(-5px);
    }
    .album img {
        width: 100%;
        border-radius: 10px;
        margin-bottom: 10px;
    }
    .album h3 {
        font-size: 1.1rem;
        margin: 5px 0;
    }
    .album p {
        font-size: 0.9rem;
        color: #b3b3b3;
    }
    .home-link {
        position: relative;
        display: inline-block;
        margin-bottom: 20px;
        color: #1DB954;
        font-weight: bold;
        font-size: 1rem;
        text-decoration: none;
    }
    .home-link::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        width: 100%;
        height: 2px;
        background-color: #1DB954;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
    }
    .home-link:hover::after {
        transform: scaleX(1);
    }
    .album-link {
        text-decoration: none;
        color: inherit;
    }
    .album-link:hover {
        color: inherit;
        cursor: pointer;
    }
</style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="banner">
            <h1>üéµ Bienvenue sur SpyMusic</h1>
            <p>Achetez Vos Projets Pr√©f√©r√©s De Vos Artistes Pr√©f√©r√©s !</p>

            <!-- üîπ Boutons Profil & Panier -->
            <div class="banner-buttons">
                <a href="{{ path('profile') }}" class="btn-banner">üë§ Profil</a>
                <a href="{{ path('app_shopping_cart') }}" class="btn-banner">üõí Panier</a>
            </div>
        </div>

        

        <h2>üîç Rechercher un album</h2>
        <input type="text" id="globalSearchInput" class="search-bar" placeholder="Entrez un album...">
        <ul class="search-results" id="searchResults"></ul>

        <a href="/myalbums" class="home-link">üìö Ma Biblioth√®que</a>

        <div class="album-container">
            {% for item in albums %}
                <div class="album">
                    <a href="/album/{{ item.album.id }}" class="album-link">
                        <img src="{{ item.album.images[0].url }}" alt="{{ item.album.name }}">
                        <h3>{{ item.album.name }}</h3>
                    </a>
                    <p>üé§ {{ item.album.artists[0].name }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
    let globalSearchInput = document.getElementById("globalSearchInput");
    let searchResults = document.getElementById("searchResults");

    globalSearchInput.addEventListener("keyup", function () {
        let query = globalSearchInput.value.trim();
        if (query.length > 2) {
            fetch(`/spotify/search?q=${query}`)
                .then(response => response.json())
                .then(data => {
                    searchResults.innerHTML = "";
                    if (!data.albums || data.albums.length === 0) {
                        searchResults.innerHTML = "<li>Aucun album trouv√©</li>";
                        return;
                    }
                    data.albums.forEach(album => {
                        let a = document.createElement("a");
                        a.href = `/album/${album.id}`;
                        a.style.textDecoration = "none";
                        a.style.color = "inherit";
                        
                        let li = document.createElement("li");
                        li.style.display = "flex";
                        li.style.alignItems = "center";
                        li.style.padding = "10px";
                        li.style.background = "#1c1c1c";
                        li.style.borderRadius = "5px";
                        li.style.marginBottom = "5px";
                        li.style.transition = "background 0.3s ease";
                        li.style.cursor = "pointer";
                        
                        li.innerHTML = `
                            <img src="${album.image}" alt="${album.title}" width="50" style="border-radius: 5px; margin-right: 10px;">
                            <div>
                                <strong>${album.title}</strong> - ${album.artist}
                            </div>
                        `;

                        li.addEventListener("mouseenter", () => {
                            li.style.background = "#1DB954";
                        });

                        li.addEventListener("mouseleave", () => {
                            li.style.background = "#1c1c1c";
                        });

                        a.appendChild(li);
                        searchResults.appendChild(a);
                    });
                })
                .catch(error => console.error("Erreur de recherche :", error));
        } else {
            searchResults.innerHTML = "";
        }
    });
});

    </script>
{% endblock %}
