{% extends 'base.html.twig' %}

{% block title %}Inscription | Spotify{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: Arial, sans-serif;
    }
    .main-container {
        display: flex;
        max-width: 1400px;
        margin: auto;
        padding: 20px;
    }
    .form-container {
        background: #282828;
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        max-width: 500px;
        margin: auto;
        text-align: center;
    }
    .form-container h1 {
        margin-bottom: 20px;
    }
    .form-container .form-group {
        margin-bottom: 15px;
        text-align: left;
    }
    .form-container label {
        display: block;
        margin-bottom: 5px;
    }
    .form-container input {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: #333;
        color: #fff;
    }
    .form-container button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: #1DB954;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
        margin-top: 10px;
    }
    .form-container button:hover {
        background: #1aa34a;
    }
    .form-container .login-link {
        margin-top: 15px;
        font-size: 0.9rem;
        color: #b3b3b3;
    }
    .form-container .login-link a {
        color: #1DB954;
        text-decoration: none;
        font-weight: bold;
    }
    .form-container .login-link a:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="main-container">
    <div class="form-container">
        <h1>Inscription</h1>
        
        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_row(registrationForm.username) }}
            </div>    
            <div class="form-group">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.password.first) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.password.second) }}
            </div>
            <button type="submit">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <!-- üîπ Ajout du lien de connexion -->
        <p class="login-link">Vous avez d√©j√† un compte ? <a href="{{ path('login') }}">Connectez-vous</a></p>
    </div>
</div>
{% endblock %}
