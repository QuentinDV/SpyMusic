{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion | Spotify{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: Arial, sans-serif;
    }
    .main-container {
        display: flex;
        max-width: 1400px;
        margin: auto;
        padding: 20px;
    }
    .form-container {
        background: #282828;
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        max-width: 500px;
        margin: auto;
    }
    .form-container h1 {
        text-align: center;
        margin-bottom: 20px;
    }
    .form-container .form-group {
        margin-bottom: 15px;
    }
    .form-container label {
        display: block;
        margin-bottom: 5px;
    }
    .form-container input {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: #333;
        color: #fff;
    }
    .form-container button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: #1DB954;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }
    .form-container button:hover {
        background: #1aa34a;
    }
    .error-message {
        color: red;
        text-align: center;
        margin-bottom: 15px;
    }
</style>
{% endblock %}

{% block body %}
<div class="main-container">
    <div class="form-container">
        <h1>Connexion</h1>
        {% if error %}
            <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form method="post">
            <div class="form-group">
                <label for="email">Email :</label>
                <input type="email" name="email" id="email" value="{{ last_username }}" required>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" name="password" id="password" required>
            </div>
            <button type="submit">Se connecter</button>
        </form>
    </div>
</div>
{% endblock %}
